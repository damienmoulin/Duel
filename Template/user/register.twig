{% extends "base/base.twig" %}
{% block content %}
	{% if error is defined %}
		<div id="output" class="alert alert-danger animated fadeInUp">{{ error }}</div>
	{% endif %}
	{% if success is defined %}
		<div id="output" class="alert alert-success animated fadeInUp">{{ success }}</div>
	{% endif %}
	<div class="form-box">
	    <form method="POST">
	    	<input type="email" name="email" placeholder="email@email.com" required>
	    	<input type="text" name="username" placeholder="username" required>
	    	<input type="password" name="password" placeholder="password" required>
	    	<input type="password" name="password-confirm" placeholder="password" required>
	    	<button type="submit" class="btn btn-info btn-block login">S'inscrire</button>
	    </form>
	    <a href="index.php?r=login">Se connecter</a>
	</div>
{% endblock %}